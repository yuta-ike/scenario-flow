{
  "extends": "./base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "include": ["${configDir}/**/*.ts", "${configDir}/**/*.tsx"]
}
